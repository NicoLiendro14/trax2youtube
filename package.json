{
  "name": "trax2youtube",
  "version": "1.1.0",
  "description": "Chrome extension to convert Traxsource charts to YouTube playlists",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:chrome": "node scripts/build.js --browser chrome",
    "build:firefox": "node scripts/build.js --browser firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run build:chrome && playwright test",
    "test:e2e:headed": "npm run build:chrome && playwright test --headed",
    "ci": "npm run lint && npm run format:check && npm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.0",
    "archiver": "^7.0.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
