{
  "manifest_version": 3,
  "name": "Traxsource to YouTube Playlist",
  "version": "1.1.0",
  "description": "Instantly convert Traxsource charts to YouTube playlists",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.traxsource.com/*",
    "https://traxsource.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.traxsource.com/*", "https://traxsource.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
